<h5>dashboard</h4>
<h3>welcome {{name}}</h3>
<p>here are your stories</p>

{{#if stories}}
    <table class="striped">
        <thead>
            <tr>
                <th>title</th>
                <th>date</th>
                <th>status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each stories}}
                <tr>
                    <td><a href="/stories/{{_id}}">{{title}}</a></td>
                    <td>{{createdOn}}</td>
                    <td><span class="dash-status">{{status}}</span></td>
                    <td></td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
    <p>you have not created any stories</p>
{{/if}}